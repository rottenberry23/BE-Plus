@page "/request"
@inject NavigationManager Navigation
<PageTitle>Be+ Request Blood</PageTitle>
	
	<header>
		<img src="resources/2.png" width="auto" height="150px">
		<nav>
			<ul>
				<li><a href="/">Home</a></li>
				<li><a href="adminlogin">Admin</a></li>
