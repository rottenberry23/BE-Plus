		{
			<h5>Fill out the following form to Request Blood from a Blood Bank</h5>

			<!-- HEADING AREA -->


			<div class="donate-card">
				<span class="makeshift-label">Select Type of Blood :</span>
				<label><input type="radio" name="options2" @onchange="@((args) => type = "A+")" /> A+</label>
				<label><input type="radio" name="options2" @onchange="@((args) => type = "A-")" /> A-</label>
				<label><input type="radio" name="options2" @onchange="@((args) => type = "B+")" /> B+</label>
				<label><input type="radio" name="options2" @onchange="@((args) => type = "B-")" /> B-</label>
				<label><input type="radio" name="options2" @onchange="@((args) => type = "O+")" /> O+</label>
				<label><input type="radio" name="options2" @onchange="@((args) => type = "O-")" /> O-</label>
				<label><input type="radio" name="options2" @onchange="@((args) => type = "AB+")" /> AB+</label>
				<label><input type="radio" name="options2" @onchange="@((args) => type = "AB-")" /> AB-</label>

				<br>

				@* ADD VAILABLE LOCATIONS HERE *@

				<div style="text-align: center;">
					<button class="buttontypetwo" @onclick="sendtoDB"> Publish Request</button>
				</div>

			</div>
		}
		else
		{
			<h3>Your Request has been successfully made with the Following details:</h3>
				<p>Blood type : @type</p>
			<br>  @* THIS DATA GOES TO THE DB *@

			<br />
			<button class="buttontypetwo" @onclick="NavigateHome">Go back to Home Page</button>
			
		}
	</div>
</div>
	

	<hr>
	<footer>
		<div class="footer-list">
